{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"outDir": "./dist",
		"typeRoots": [
			"node_modules/@types"
		],
		"strict": true,
		"resolveJsonModule": true,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": false
	},
	"ts-node": {
		"transpileOnly": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"**/*.test.ts",
		"**/*.test.tsx",
		"__tests__"
	]
}
